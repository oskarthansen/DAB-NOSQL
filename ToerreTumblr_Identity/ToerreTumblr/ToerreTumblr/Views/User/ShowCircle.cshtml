@model ToerreTumblr.Models.Circle

@{
    ViewData["Title"] = "ShowCircle";
}

<h1>@Model.Name</h1>

@for (int i = 0; i < Model.Posts.Length; ++i)
{
    <div class="feed-post">
        <p>@Model.Posts[i].Text</p>
        <img src="~/Images/@Model.Posts[i].Image" />
        <p>By: @Model.Posts[i].Author</p>
        <p>Created: @Model.Posts[i].CreationTime.ToString("f")</p>
        <a asp-action="AddComment" asp-route-id="@Model.Posts[i]._id">Add a comment</a>
        <div class="post-comments">
            @for (int j = 0; i < Model.Posts[i].Comments.Length; ++j)
            {
                <a asp-action="ShowWall" asp-route-id="@Model.Posts[i].Comments[j].Id">@Model.Posts[i].Comments[j].Author:</a>
                <p>@Model.Posts[i].Comments[j].Text</p>
                <hr />
            }
        </div>
    </div>
    <hr />
}

<a asp-action="AddPost" asp-route-circleId="@Model.Id">Add a post</a>
