@model ToerreTumblr.ViewModels.EditCommentViewModel

@{
    ViewData["Title"] = "DeleteComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DeleteComment</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment.Author)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment.Text)
        </dd>
    </dl>
    
    <form asp-action="DeleteComment">
        <input type="hidden" asp-for="Comment.Id" />
        <input type="hidden" asp-for="Post.Id" />
        <input type="hidden" asp-for="Post.SourceId" />
        <input type="hidden" asp-for="Post.SharedType" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ShowFeed">Back to feed</a>
    </form>
</div>
