@model List<Post>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>My feed</h2>

@for (int i = 0; i < Model.Count; ++i)
{
    <div class="feed-post">
        <p>@Model[i].Text</p>
        <img src="~/Images/@Model[i].Image" />
        <p>By: @Model[i].Author</p>
        <p>Created: @Model[i].CreationTime.ToString("g")</p>
        <a asp-action="AddComment" asp-route-id="@Model[i].Id" >Add a comment</a>
        <div class="post-comments">
            @for (int j = 0; i < Model[i].Comments.Length; ++j)
            {
                <a asp-action="ShowWall" asp-route-id="@Model[i].Comments[j].Id">@Model[i].Comments[j].Author:</a>
                <p>@Model[i].Comments[j].Text</p>
                <hr/>
            }
        </div>
    </div>
    <hr/>
}

